#!groovy


stage 'Dev'
node {
    checkout scm
    mvn 'clean install '
    
}
environment {
    PATH = "$PATH"
	WORKSPACE="$WORKSPACE"
  }

stage 'QA'
parallel(longerTests: {
    runTests(30)
}, quickerTests: {
    runTests(20)
})


stage name: 'Production', concurrency: 1

def mvn(args) {
    
    sh 'mvn ${args} -f back-end/pom.xml  '
}

def runTests(duration) {
    node {
        sh "sleep ${duration}"
        }
    }

def deploy(id) {

}

def undeploy(id) {
    
}
